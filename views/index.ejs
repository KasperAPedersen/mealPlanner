<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <script src="https://kit.fontawesome.com/d7cb81324e.js" crossorigin="anonymous"></script>

        <!-- Common stylesheets -->
        <link rel="stylesheet" type="text/css" href="inc/styling/css/common.css" />
        <link rel="stylesheet" type="text/css" href="inc/styling/css/header.css" />
        <link rel="stylesheet" type="text/css" href="inc/styling/css/footer.css" />

        <!-- Page specific stylesheets -->
        <link rel="stylesheet" type="text/css" href="inc/styling/css/index/index.css" />
        <link rel="stylesheet" type="text/css" href="inc/styling/css/index/modal.css" />
        <link rel="stylesheet" type="text/css" href="inc/styling/css/index/alert.css" />

        <!-- Responsive stylesheets -->
        <link rel="stylesheet" type="text/css" href="inc/styling/css/index/responsive/1024px.css" media="screen and (max-width: 1024px)"/>
        <link rel="stylesheet" type="text/css" href="inc/styling/css/index/responsive/768px.css" media="screen and (max-width: 768px)"/>
        <link rel="stylesheet" type="text/css" href="inc/styling/css/index/responsive/425px.css" media="screen and (max-width: 425px)"/>
        <link rel="stylesheet" type="text/css" href="inc/styling/css/index/responsive/375px.css" media="screen and (max-width: 375px)"/>

    </head>
    <body>
        <div id="overlay"></div>
        <div id="modal"></div>

        <header>
            <div class="swp">
                <h1>Madkassen</h1>
                <div>
                <% if (loggedin) { %>
                    <a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i></a>
                    <a href="#" onclick="toggleSideMenu();"><i class="fa fa-user" aria-hidden="true"></i></a>
                <% } else { %>
                    <a href="#" onclick="showLoginModal();"><i class="fa fa-sign-in" aria-hidden="true"></i></a>
                    <a href="#" onclick="showRegisterModal();"><i class="fa-regular fa-address-card" aria-hidden="true"></i></a>
                    <% } %>
            </div>
            <div id="sideMenu" class="side-menu">
                <a href="javascript:void(0)" class="closebtn" onclick="toggleSideMenu()">&times;</a>
                <h2>Shopping Lists</h2>
                <button onclick="createShoppingList()">Create Shopping List</button>
                <ul id="shoppingLists"></ul>
            </div>
            </div>

        </header>
        <div class="clearFix"></div>
        <div class="swp">
            <% if (locals.messages != null) { %>
                <% let messages = Array(locals.messages); messages.forEach((m) => { %>
                    <div class="w3-panel" id="alert"><p id="alertInfo"><%= m.info %></p><i class="fa fa-times" onclick="closeAlert(this);" aria-hidden="true"></i></div>
            <% })} %>

            <div>
                <nav>
                    <div class = "category">
                        <p onclick="toggleDropdown(this);">Ingredienser</p>
                            <div>
                                <ul>
                                    <li onclick="fetchCategoriesAndItems()"><a>Alle Ingredienser</a></li>
                                    <li onclick="fetchCategoriesAndItems('Vegetables')"><a>Grønsager</a></li>
                                    <li onclick="fetchCategoriesAndItems('Fish')"><a>Fisk</a></li>
                                    <li onclick="fetchCategoriesAndItems('Meat')"><a>Kød</a></li>
                                    <li onclick="fetchCategoriesAndItems('Soup')"><a>Suppe</a></li>
                                    <li onclick="fetchCategoriesAndItems('Dessert')"><a>Dessert</a></li>
                                </ul>
                            </div>
                        </div>

                    <div class = "category">
                        <p class = "navHead" onclick="toggleDropdown(this);">Opskrifter</p>
                        <div>
                            <ul>
                                <li>Vegetar</li>
                                <li>Fisketar</li>
                                <li>Veganer</li>
                                <li>Kødretter</li>
                                <li>Supper</li>
                                <li>Deserter</li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <div id="itemField"></div>
                <div class="clearFix"></div>
            </div>
        </div>
        <footer>
            <div class="swp">
                <p>Har du brug for hjælp? Kontakt os her</p>
                <p>Telefon: 12345678</p>
                <p>Email: info@madkassen.dk</p>
                <p>Copyright &copy; 2024</p>
            </div>
        </footer>
    <script src="inc/styling/js/index/index.js"></script>
    <script src="inc/styling/js/index/modal.js"></script>
    </body>
</html>